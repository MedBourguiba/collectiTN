{% extends 'frontClient.html.twig' %}

{% block body %}
	<!-- page title -->
	<section
		class="page-title">
		<!-- Container Start -->
		<div class="container">
			<div class="row">
				<div
					class="col-md-8 offset-md-2 text-center">
					<!-- Title text -->
					<h3>Contact Us</h3>
				</div>
			</div>
		</div>
		<!-- Container End -->
	</section>
	<!-- page title -->

	<!-- contact us start-->
	<section class="section">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="contact-us-content p-4">
						<h5>Contact Us</h5>
						<h1 class="pt-3">Hello, what's on your mind?</h1>
						<p class="pt-3 pb-5">N'hésitez pas à nous contacter pour toute demande d'information ou de collaboration, notre équipe se fera un plaisir de vous répondre dans les meilleurs délais</p>
					</div>
				</div>
				<div class="col-md-6">
					{{ form_start(form, {'id': 'reclamation-form'}) }}
					<fieldset class="p-4">
						<div class="form-group">
							<div class="row">
								<div class="col-lg-6 py-2">
									{{ form_row(form.name, {'attr': {'placeholder': 'Name *', 'class': 'form-control', 'required': 'required'}}) }}
								</div>
								<div class="col-lg-6 pt-2">
									{{ form_row(form.email, {'attr': {'placeholder': 'Email *', 'class': 'form-control', 'required': 'required'}}) }}
								</div>
							</div>
						</div>
						{{ form_row(form.sujet, {'attr': {'class': 'form-control w-100', 'required': 'required'}}) }}
						{{ form_row(form.message, {'attr': {'placeholder': 'Message *', 'class': 'border w-100 p-3 mt-3 mt-lg-4', 'required': 'required'}}) }}
						<div class="btn-grounp">
							<button type="submit" class="btn btn-primary mt-2 float-right">SUBMIT</button>
						</div>
					</fieldset>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
		{# <script>
			document.getElementById("submit-btn").addEventListener("click", function (event) 
            {
                event.preventDefault(); // prevent the default form submission
                alert("Your reclamation has been submitted!"); // show a pop-up message
                document.getElementById("reclamation-form").submit(); // submit the form
            });
		</script> #}
	</section>
	<!-- contact us end-->
{% endblock %}
