{% extends 'frontClient.html.twig' %}
{% block body %}
<section class="section bg-gray">
	<!-- Container Start -->
	<div class="container">
		<div class="row">
			<!-- Left sidebar -->
			<div class="col-lg-8">
				<article class="single-post">
					<h2>{{item.name}}</h2>
                    {% set img_path = 'uploads/item_images/' ~ item.getimg %}
					<img src="{{ asset(img_path) }}" alt="piece">
					<p>{{item.description}}</p>
				</article>
			</div>
			<div class="col-lg-4">
				<div class="sidebar">
					<div class="widget price text-center">
						<h4>Dernier prix</h4>
						{% if lastBidAmount %}
                           <p>{{ lastBidAmount }} TND</p>
                       {% else %}
                           <p>Pas d'enchères</p>
                       {% endif %}
					</div>
					<!-- User Profile widget -->
				  <div class="widget coupon text-center">
               
                       <div class="row">
                         <div class="col-sm-6">
                           
                              <p>Date Debut:</p>
                                   <p>{{ item.getStartTime|date('m/d/Y') }}</p>
                           
                        </div>
                        <div class="col-sm-6">
                               
                                    <p >Date fin:</p>
                                    <p>{{ item.getEndTime|date('m/d/Y') }}</p>
                                
                            </div>
                       </div>
                     <hr>
                        <div class="row">
                            <div class="col-sm-6">
                        
                                  <p>Estmée pour:</p>
                                     <p>{{ item.getEstimatedPrice }}</p>
                            
                            </div>
                           <div class="col-sm-6">
                                
                                     <p>Prix du départ:</p>
                                        <p>{{ item.getStartingPrice }}</p>
                            
                          </div>
                      </div>
                
                   </div>

					<!-- Map Widget -->
					<div class="widget coupon text-center">
                           {{ form_start(form) }}
                           {{ form_row(form.amount, {'attr': {'class': 'form-control', 'placeholder': 'entrez votre montant'}}) }}
                           <button type="submit" class="btn btn-transparent-white">Enchèrer</button>
                           {{ form_end(form) }}
					</div>
					<!-- Rate Widget -->
					<div class="widget rate">
						<!-- Heading -->
						<h5 class="widget-header text-center">Comment vou notez
							<br>
							Ce Partenaire</h5>
						<!-- Rate -->
						<div class="starrr"></div>
					</div>

				</div>
			</div>

		</div>
	</div>
	<!-- Container End -->
</section>

 {{ include('@MercurySeriesFlashy/flashy.html.twig') }}
{% endblock %}